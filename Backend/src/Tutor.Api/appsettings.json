{
  "Jwt": {
    "Secret": "REPLACE_IN_PRODUCTION",
    "Issuer": "REPLACE_IN_PRODUCTION",
    "Audience": "REPLACE_IN_PRODUCTION",
    "ExpiryHours": 24
  },
  "SendGrid": {
    "ApiKey": "REPLACE_IN_PRODUCTION"
  },
  "OAuth": {
    "Google": {
      "ClientId": "REPLACE_IN_PRODUCTION",
      "ClientSecret": "REPLACE_IN_PRODUCTION",
      "UserInfoEndpoint": "https://www.googleapis.com/oauth2/v3/userinfo"
    }
  },
  "CloudinarySettings": {
    "CloudName": "REPLACE_IN_PRODUCTION",
    "ApiKey": "REPLACE_IN_PRODUCTION",
    "ApiSecret": "REPLACE_IN_PRODUCTION"
  },
  "FrontendUrl": "REPLACE_IN_PRODUCTION",
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=db-server;Port=5432;Database=Tutor;Username=admin;Password=admin",
    "Redis": "redis-server:6379,abortConnect=false,connectTimeout=30000"
  },
  "RateLimiting": {
    "Global": {
      "PermitLimit": 1000,
      "WindowMinutes": 1
    },
    "Auth": {
      "PermitLimit": 5,
      "WindowMinutes": 1
    },
    "PasswordReset": {
      "PermitLimit": 3,
      "WindowMinutes": 15
    },
    "Sensitive": {
      "PermitLimit": 10,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 2
    },
    "Api": {
      "PermitLimit": 100,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 3
    },
    "Burst": {
      "TokenLimit": 50,
      "ReplenishmentSeconds": 10,
      "TokensPerPeriod": 10
    },
    "Concurrent": {
      "PermitLimit": 10
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    },
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Async",
      "Serilog.Exceptions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId",
      "WithMachineName",
      "WithExceptionDetails"
    ]
  }
}
